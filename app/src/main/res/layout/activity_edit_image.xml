<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".activities.editimage.EditImageActivity">
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/_8sdp"
        android:background="@color/primary"
        android:orientation="horizontal"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewBack"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:src="@drawable/ic_back"
            android:tint="@color/white"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_weight="1"
            android:fontFamily="@font/semibold"
            android:text="Filtre Uygula"
            android:includeFontPadding="false"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewCheck"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:src="@drawable/ic_check"
            android:tint="@color/white"
            />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageEditPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:layout_constraintBottom_toTopOf="@id/recylerViewFilter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        />
    <ProgressBar
        android:id="@+id/previewProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:layout_constraintBottom_toTopOf="@id/recylerViewFilter"/>
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recylerViewFilter"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_105sdp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/_8sdp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingStart="@dimen/_8sdp"
    android:paddingBottom="@dimen/_8sdp"
    android:clipToPadding="false"
    tools:listitem="@layout/item_container_filter"
    />
    <ProgressBar
        android:id="@+id/progresBarFilters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/recylerViewFilter"
        app:layout_constraintBottom_toBottomOf="@id/recylerViewFilter"
        app:layout_constraintStart_toStartOf="@id/recylerViewFilter"
        app:layout_constraintEnd_toEndOf="@id/recylerViewFilter"
        />
</androidx.constraintlayout.widget.ConstraintLayout>